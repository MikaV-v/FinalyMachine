<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.Theme.AppCompat.Light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_500"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.samples.vision.barcodereader.MainActivity"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/barcode_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_message"
        android:layout_alignEnd="@+id/status_message"
        android:layout_alignRight="@+id/status_message"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/status_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button

        android:id="@+id/read_barcode"
        style="@style/Base.Theme.AppCompat.Light"
        android:layout_width="412dp"
        android:background="@color/grey_500"
        android:layout_height="715dp"
        android:layout_below="@+id/status_message"
        android:layout_alignStart="@+id/barcode_value"
        android:layout_alignLeft="@+id/barcode_value"
        android:layout_alignEnd="@+id/barcode_value"
        android:layout_alignRight="@+id/barcode_value"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-32dp"
        android:layout_marginLeft="-32dp"
        android:layout_marginTop="-46dp"
        android:layout_marginEnd="-23dp"
        android:layout_marginRight="-23dp"
        android:layout_marginBottom="16dp"
        android:text="@string/НАЖМИТЕЧТОБЫНАЧАТЬСКАНИРОВАНИЕ"
        android:textColor="#FDFDFE" />

</RelativeLayout>
